-- Swiss Flag (CH) 640x480 VGA Output — Full Cross
-- Renders a Swiss flag centered on a 640x480 framebuffer.
-- Red 256x256 square with white cross (both horizontal and vertical bars).
--
-- Written in raw F18A assembly (f18a.*, lit.*, label{}).
--
-- Architecture: 11-node feeder-relay pipeline for synchronized RGB output.
--   R channel: feeder 116 → relay DAC 117 (+ sync trigger to 217)
--   G channel: upstream feeder 615 → main feeder 616 → relay DAC 617
--   B channel: upstream feeder 715 → main feeder 716 → relay DAC 717
--   Sync: node 217 receives row-end signals from 117, emits HSYNC/VSYNC
--
-- G/B channels are split across 2 feeder nodes each because the full
-- cross pattern (5 distinct row regions) exceeds 64-word RAM per node.
-- For all-uniform row regions, a single fill with count=rows*640 avoids
-- an outer loop, saving ~4 words per region.
--
-- EVB002 VGA wiring:
--   Node 117 DAC (117.ao) → R channel
--   Node 617 DAC (617.ao) → G channel
--   Node 717 DAC (717.ao) → B channel
--   Node 217 pin17 (GPIO) → HSYNC / VSYNC
--
-- DAC XOR encoding: write (desired ^ 0x155) to IO register.
--   Zero output:  0x000 ^ 0x155 = 0x155
--   Max output:   0x1FF ^ 0x155 = 0x0AA
--
-- Layout (640x480):
--   Flag: 256x256 at (192,112)-(447,367)
--   Horizontal bar: 160x64 at (240,208)-(399,271)
--   Vertical bar: 64x160 at (288,152)-(351,311)
--
-- Row breakdown for G/B channels (480 rows):
--   Rows 0-151:   black (152 rows)
--   Rows 152-207: vertical bar only (56 rows)
--   Rows 208-271: both bars (64 rows)
--   Rows 272-311: vertical bar only (40 rows)
--   Rows 312-479: black (168 rows)

-- ============================================================
-- RED FEEDER (node 116)
-- ============================================================
-- R = max (0x0AA) for entire 256x256 flag area (both red and white
-- cross areas have R=max). Black (0x155) outside flag.
-- B register set to east port (RIGHT=0x1D5 for even-x node).

node 116 { b=0x1D5 }

/\

-- Sync: send "go" signal east to 117
lit.hex18{value=0}
/\ f18a.storeb

/\

-- Rows 0-111: 112*640 = 71680 black pixels
label{name=top}
/\ lit.hex18{value=71679}
/\ f18a.push
/\ lit.hex18{value=0x155}
/\ label{name=f1}
/\ f18a.dup
/\ f18a.storeb
/\ f18a.unext
/\ f18a.drop

/\

-- Rows 112-367: 256 rows, per-row pattern (192 black + 256 red + 192 black)
lit.hex18{value=255}
/\ f18a.push
/\ label{name=row}

/\

-- 192 black
lit.hex18{value=191}
/\ f18a.push
/\ lit.hex18{value=0x155}
/\ label{name=f2}
/\ f18a.dup
/\ f18a.storeb
/\ f18a.unext
/\ f18a.drop

/\

-- 256 red
lit.hex18{value=255}
/\ f18a.push
/\ lit.hex18{value=0x0AA}
/\ label{name=f3}
/\ f18a.dup
/\ f18a.storeb
/\ f18a.unext
/\ f18a.drop

/\

-- 192 black
lit.hex18{value=191}
/\ f18a.push
/\ lit.hex18{value=0x155}
/\ label{name=f4}
/\ f18a.dup
/\ f18a.storeb
/\ f18a.unext
/\ f18a.drop

/\

f18a.next{addr=row}

/\

-- Rows 368-479: 112*640 = 71680 black pixels
lit.hex18{value=71679}
/\ f18a.push
/\ lit.hex18{value=0x155}
/\ label{name=f5}
/\ f18a.dup
/\ f18a.storeb
/\ f18a.unext
/\ f18a.drop

/\

f18a.jump{addr=top}

-- ============================================================
-- RED DAC RELAY (node 117)
-- ============================================================
-- Reads pixel data from west (RIGHT=0x1D5 for odd-x) and writes to DAC.
-- After each row of 640 pixels, signals sync node 217 via north (UP=0x145).

node 117

/\

-- Wait for sync "go" signal from 116
lit.hex18{value=0x1D5}
/\ f18a.astore
/\ f18a.fetch
/\ f18a.drop

/\

label{name=frame}

/\

-- 480 rows
lit.hex18{value=479}
/\ f18a.push

/\

label{name=row}

/\

-- Relay 640 pixels: read from west port, write to IO
lit.hex18{value=0x1D5}
/\ f18a.astore
/\ lit.hex18{value=639}
/\ f18a.push
/\ label{name=px}
/\ f18a.fetch
/\ f18a.storeb
/\ f18a.next{addr=px}

/\

-- Signal sync node 217 via north (UP=0x145)
lit.hex18{value=0x145}
/\ f18a.astore
/\ lit.hex18{value=0}
/\ f18a.store

/\

f18a.next{addr=row}

/\

f18a.jump{addr=frame}

-- ============================================================
-- SYNC SIGNALS (node 217 pin17 GPIO)
-- ============================================================
-- Waits for signal from R relay (117) after each row via south (UP=0x145),
-- emits HSYNC, then broadcasts "next row" north to 317 (DOWN=0x115)
-- so that G/B DAC relays (617, 717) stay row-synchronized.
-- VSYNC at end of frame, also broadcast north.

node 217

/\

label{name=frame}

/\

-- 480 rows
lit.hex18{value=479}
/\ f18a.push

/\

label{name=row}

/\

-- Wait for signal from 117 via south (UP=0x145)
lit.hex18{value=0x145}
/\ f18a.astore
/\ f18a.fetch
/\ f18a.drop

/\

-- HSYNC: pin17 drive low = 0x20000 (write to B=0x15D)
lit.hex18{value=0x20000}
/\ f18a.storeb

/\

-- Broadcast row sync north to 317 (DOWN=0x115)
lit.hex18{value=0x115}
/\ f18a.astore
/\ lit.hex18{value=0}
/\ f18a.store

/\

f18a.next{addr=row}

/\

-- VSYNC: pin17 drive high = 0x30000 (write to B=0x15D)
-- No broadcast for VSYNC — 617/717 loop exactly 480 rows matching the row syncs
lit.hex18{value=0x30000}
/\ f18a.storeb

/\

f18a.jump{addr=frame}

-- ============================================================
-- SYNC RELAY NODES (317, 417, 517)
-- ============================================================
-- Relay row sync signals from 217 northward to 617.
-- Each reads from south, writes to north, forever.

-- Node 317 (y=3 odd): south=DOWN(0x115), north=UP(0x145)
node 317

/\

label{name=loop}

/\

-- Recv from south (DOWN=0x115)
lit.hex18{value=0x115}
/\ f18a.astore
/\ f18a.fetch
/\ f18a.drop

/\

-- Send north (UP=0x145)
lit.hex18{value=0x145}
/\ f18a.astore
/\ lit.hex18{value=0}
/\ f18a.store

/\

f18a.jump{addr=loop}

-- Node 417 (y=4 even): south=UP(0x145), north=DOWN(0x115)
node 417

/\

label{name=loop}

/\

-- Recv from south (UP=0x145)
lit.hex18{value=0x145}
/\ f18a.astore
/\ f18a.fetch
/\ f18a.drop

/\

-- Send north (DOWN=0x115)
lit.hex18{value=0x115}
/\ f18a.astore
/\ lit.hex18{value=0}
/\ f18a.store

/\

f18a.jump{addr=loop}

-- Node 517 (y=5 odd): south=DOWN(0x115), north=UP(0x145)
node 517

/\

label{name=loop}

/\

-- Recv from south (DOWN=0x115)
lit.hex18{value=0x115}
/\ f18a.astore
/\ f18a.fetch
/\ f18a.drop

/\

-- Send north (UP=0x145)
lit.hex18{value=0x145}
/\ f18a.astore
/\ lit.hex18{value=0}
/\ f18a.store

/\

f18a.jump{addr=loop}

