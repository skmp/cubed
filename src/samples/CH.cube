/\ f18a.drop

/\

f18a.next{addr=vbar1}

/\

-- Rows 208-271: 64 rows, both bars (240 black + 160 white + 240 black)
lit.hex18{value=63}
/\ f18a.push
/\ label{name=both}

/\

-- 240 black
lit.hex18{value=239}
/\ f18a.push
/\ lit.hex18{value=0x155}
/\ label{name=f5}
/\ f18a.dup
/\ f18a.storeb
/\ f18a.unext
/\ f18a.drop

